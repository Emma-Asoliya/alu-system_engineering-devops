#!/usr/bin/env bash
# Bash script to install nginx web server & configure it to return 200 OK

# Update package list
sudo apt-get update

# Install nginx
sudo apt-get install nginx -y

# Create custom HTML directory and file
sudo mkdir -p /etc/nginx/html
sudo touch /etc/nginx/html/index.html
echo "Holberton School" | sudo tee /etc/nginx/html/index.html

# Configure the default Nginx server block
sudo bash -c 'cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /etc/nginx/html;
    index index.html;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF'

# Restart nginx
sudo service nginx restart

# Check if the server responds with a 200 status code
status_code=$(curl -o /dev/null -s -w "%{http_code}\n" http://localhost)
if [ "$status_code" -eq 200 ]; then
    echo "Server is working and returning 200 OK."
else
    echo "Server configuration failed or not returning 200 OK. Status code: $status_code"
fi

